generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
  binaryTargets   = ["native", "windows"]
  engineType      = "library"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model base_employee {
  id       Int       @id @default(autoincrement())
  name     String
  code     String?
  idCard   String?
  mobile   String?
  sex      Int?      @default(0)
  birthday DateTime?
  address  String?
  email    String?
  type     String?
  updater  String?
  updatime DateTime?
  state    Int       @default(1)
}

model category {
  id    Int          @id @default(autoincrement())
  label String
  pid   Int?
  goods base_goods[]
}

model base_goods {
  id                  Int                   @id @default(autoincrement())
  name                String
  code                String
  category            category?             @relation(fields: [cid], references: [id])
  cid                 Int?
  type                String?
  brand               String?
  unit                String?
  color               String?
  standard            String?
  material            String?
  buyPrice            Decimal?
  salePrice           Decimal?
  descs               String?
  updater             String?
  updatime            DateTime?
  state               Int                   @default(1)
  picture             String?
  purchase_order_item purchase_order_item[]
  sale_order_item     sale_order_item[]
  stock               stock[]
}

model base_param {
  id       Int       @id @default(autoincrement())
  name     String
  descs    String?
  state    Int       @default(1)
  type     String
  creater  String?
  creatime DateTime?
}

model base_repo {
  id                  Int                   @id @default(autoincrement())
  name                String
  code                String
  address             String?
  descs               String?
  adminId             Int?
  updater             String?
  updatime            DateTime?             @updatedAt
  state               Int                   @default(1)
  purchase_order_item purchase_order_item[]
  sale_order_item     sale_order_item[]
  stock               stock[]
}

model purchase_order {
  id                  Int                   @id @default(autoincrement())
  itemList            purchase_order_item[]
  supplierId          Int?
  supplier            purchase_supplier?    @relation(fields: [supplierId], references: [id])
  code                String?
  payPrice            Decimal?
  totalPrice          Decimal?
  userId              Int?
  descs               String
  date                DateTime?
}

model purchase_order_item {
  id             Int            @id @default(autoincrement())
  orderId        Int
  repoId         Int
  repo           base_repo      @relation(fields: [repoId], references: [id])
  purchase_order purchase_order @relation(fields: [orderId], references: [id])
  goodsId        Int?
  goods          base_goods?    @relation(fields: [goodsId], references: [id])
  amount         Int?
  price          Decimal?
  totalPrice     Decimal?
}

model purchase_supplier {
  id             Int              @id @default(autoincrement())
  name           String
  linkman        String
  mobile         String?
  address        String?
  descs          String?
  state          Int              @default(1)
  updater        String?
  updatime       DateTime?
  purchase_order purchase_order[]
}

model sale_customer {
  id         Int          @id @default(autoincrement())
  name       String
  linkman    String
  mobile     String?
  address    String?
  descs      String?
  state      Int          @default(1)
  updater    String?
  updatime   DateTime?
  sale_order sale_order[]
}

model sale_order {
  id         Int               @id @default(autoincrement())
  itemList   sale_order_item[]
  customerId Int?
  customer   sale_customer?    @relation(fields: [customerId], references: [id])
  code       String?
  payPrice   Decimal?
  totalPrice Decimal?
  userId     Int?
  descs      String
  date       DateTime?
}

model sale_order_item {
  id         Int         @id @default(autoincrement())
  orderId    Int
  repoId     Int
  repo       base_repo   @relation(fields: [repoId], references: [id])
  sale_order sale_order  @relation(fields: [orderId], references: [id])
  goodsId    Int?
  goods      base_goods? @relation(fields: [goodsId], references: [id])
  amount     Int?
  price      Decimal?
  totalPrice Decimal?
}

model stock {
  id             Int         @id @default(autoincrement())
  goodsId        Int
  goods          base_goods? @relation(fields: [goodsId], references: [id])
  repoId         Int
  repo           base_repo   @relation(fields: [repoId], references: [id])
  totalCount     Int?
  saleCount      Int?
  buyPrice       Decimal?
  avgBuyPrice    Decimal?
  salePrice      Decimal?
  totalBuyPrice  Decimal?
  totalSalePrice Decimal?
  updatime       DateTime?   @updatedAt
  state          Int         @default(1)
}

model sys_user {
  id         Int       @id @default(autoincrement())
  account    String
  password   String
  roleId     Int?
  roleName   String?
  employeeId Int?
  updater    String?
  updatime   DateTime?
  state      Int       @default(1)
  isLocked   Int?      @default(0)
  lockTime   DateTime?

  @@index([account, password], map: "idx_sys_user_idx_user_account")
}
